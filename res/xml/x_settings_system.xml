<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android"
	android:title="@string/system_title"
        xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

        <Preference
            android:key="smart_pixels"
            android:title="@string/smart_pixels_title"
            android:summary="@string/smart_pixels_summary"
            android:fragment="com.msm.xtended.fragments.SmartPixels" />

        <Preference
            android:key="suspend_actions"
            android:title="@string/screen_state_toggles_title" 
            android:summary="@string/screen_state_toggles_summary_opt"
            android:fragment="com.msm.xtended.fragments.SuspendActions" />

        <Preference
             android:key="time_in_state"
             android:title="@string/time_in_state_title"
             android:summary="@string/time_in_state_summary"
             android:fragment="com.msm.xtended.fragments.TimeInState" />
			 
        <Preference
             android:key="doze_settings"
             android:title="@string/doze_settings_title"
             android:summary="@string/doze_settings_summary"
             android:fragment="com.msm.xtended.fragments.DozeSettings" />

        <Preference
            android:key="aggressive_battery"
            android:title="@string/aggressive_battery_title"
            android:summary="@string/aggressive_battery_summary"
            android:fragment="com.msm.xtended.fragments.AggressiveBattery" />
  
        <!-- Clipboard access toast notification -->
        <com.msm.xtended.preferences.SystemSettingSwitchPreference
            android:key="show_clipboard_toast"
            android:title="@string/show_clipboard_toast"
            android:summary="@string/show_clipboard_toast_summary"
            android:defaultValue="false" />

        <com.msm.xtended.preferences.SystemSettingSwitchPreference
            android:key="sensor_block"
            android:title="@string/sensor_block_title"
            android:summary="@string/sensor_block_summary"
            android:defaultValue="true" />

        <!-- App picker activity for sensor block -->
        <PreferenceCategory
            android:title="@string/sensor_block_app_picker_title"
            android:dependency="sensor_block"
            android:key="sensor_block_applications">
            <Preference
                android:key="add_sensor_block_packages"
                android:title="@string/add_sensor_block_package_title" />
        </PreferenceCategory>

        <com.msm.xtended.preferences.SystemSettingSwitchPreference
            android:key="pocket_judge"
            android:title="@string/pocket_judge_title"
            android:summary="@string/pocket_judge_summary"
            android:defaultValue="false" />

        <com.msm.xtended.preferences.SecureSettingSwitchPreference
            android:key="adb_notify"
            android:title="@string/adb_notify"
            android:summary="@string/adb_notify_summary"
            android:defaultValue="true" />
    
    	<PreferenceCategory
            android:key="selinux"
            android:title="@string/selinux_category">

        <Preference
            android:summary="@string/selinux_explanation_summary"
            android:selectable="false"/>

        <SwitchPreference
            android:key="selinux_mode"
            android:title="@string/selinux_mode_title"
            android:summaryOn="@string/selinux_enforcing_summary"
            android:summaryOff="@string/selinux_permissive_summary" />

        <SwitchPreference
            android:key="selinux_persistence"
            android:title="@string/selinux_persistence_title"
            android:summary="@string/selinux_persistence_summary"
            android:defaultValue="true" />
    	</PreferenceCategory>

</PreferenceScreen>
