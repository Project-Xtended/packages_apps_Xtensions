<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/decor_room_category" >

    <!--Battery Bar -->
    <Preference
        android:key="batterybar"
        android:title="@string/batterybar_title"
        android:summary="@string/batterybar_summary"
        android:fragment="com.xtended.xtensions.fragments.BatteryBarSettings" />

    <!-- Status Bar Logo Style -->
    <Preference
        android:key="status_bar_logo"
        android:title="@string/status_bar_logo_category_title"
        android:summary="@string/status_bar_logo_category_summary"
        android:fragment="com.xtended.xtensions.fragments.StatusbarLogo" />

    <!--Carrier Label -->
    <Preference
        android:key="carrier_label"
        android:title="@string/carrier_label_menu"
        android:summary="@string/carrier_label_summary"
        android:fragment="com.xtended.xtensions.fragments.CarrierLabelSettings" />

    <!-- Status Bar Battery Style -->
    <Preference
        android:key="battery_settings"
        android:title="@string/battery_style_category_title"
        android:summary="@string/battery_style_category_summary"
        android:fragment="com.xtended.xtensions.fragments.StatusBarBattery" />
			
    <!-- Status Bar Clock Style -->
    <Preference
        android:key="status_bar_clock"
        android:fragment="com.xtended.xtensions.fragments.StatusBarClockSettings"
        android:title="@string/status_bar_clock_title"
        android:summary="@string/status_bar_clock_summary" />

    <!--Status Bar Weather -->
    <ListPreference
        android:key="status_bar_show_weather_temp"
        android:title="@string/statusbar_weather_title"
        android:dialogTitle="@string/statusbar_weather_dialog_title"
        android:entries="@array/status_bar_weather_entries"
        android:entryValues="@array/status_bar_weather_values" />

</PreferenceScreen>

